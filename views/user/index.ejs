<div class="container">
  <h3>Users</h3>
  <table class="table">
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Title</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>

    <% _.each(users, function  (user) { %>
      <tr data-id="<%= user.id%>" data-model="user">
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.title %></td>
        <td><%= user.email %></td>
        <% if(user.admin)  { %>
        <td>ADMIN</td>
        <% } else { %>
        <td></td>
        <% } %>
        <td><a href="/user/show/<%= user.id%>" class="btn btn-primary btn-sm">Show</a></td>
        <td><a href="/user/edit/<%= user.id%>" class="btn btn-warning btn-sm">Edit</a></td>
        <td><a href="/user/destroy/<%= user.id%>" class="btn btn-danger btn-sm">Delete</a></td>
      </tr>
    <% }) %>
  </table>
</div>
